@inherits UmbracoViewPage
@using GI.BackOffice

@{
    var homePage = Model.AncestorOrSelf<HomePage>();

    var selection = Umbraco.Content(Guid.Parse("c606cba8-dfeb-4db5-99be-e297710fe601"))
        .Children()
        .Where(x => x.IsVisible())
        .Randomize()
        .Take(2);
}

<!-- START: Footer -->
<footer class="nk-footer">

    <div class="container">
        <div class="nk-gap-3"></div>
        <div class="row vertical-gap">
            <div class="col-md-6">
                <div class="nk-widget">
                    <h4 class="nk-widget-title"><span class="text-main-1">Варто</span> Згадування</h4>
                    <div class="nk-widget-content">
                        <div class="row vertical-gap sm-gap">
                            @foreach (var post in selection.Select(x => x as ContentPage))
                            {
                                if (post == null) continue;

                                <div class="col-lg-6">
                                    <div class="nk-widget-post-2">
                                        <a href="@post.Url()" class="nk-post-image">
                                            <img src="@post.MainImage?.GetCropUrlWebp(ImageCropName.Quadratic)" alt="@post.Title">
                                        </a>
                                        <div class="nk-post-title">
                                            <a href="@post.Url()">@post.Title</a>
                                        </div>
                                        <div class="nk-post-date">
                                            <span class="fa fa-calendar"></span> 
                                            @post.CreateDate.ToShortDateString() @post.CreateDate.ToShortTimeString()
                                            <!--<span class="fa fa-comments"></span> <a href="#">4</a>-->
                                        </div>
                                    </div>
                                </div>
                            }

